<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fazal.capalino.Activities.ActivationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activationdialog"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.example.fazal.capalino.CustomViews.CustomTextView_Book
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textSize="17sp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"/>

        <com.example.fazal.capalino.CustomViews.CustomEditText_Book
            android:padding="8dp"
            android:id="@+id/email"
            android:singleLine="true"
            style="@style/App_EditTextStyle"
            android:textColor="@color/editext_color"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.example.fazal.capalino.CustomViews.CustomTextView_Book
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="4dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activation_code"/>

        <com.example.fazal.capalino.CustomViews.CustomEditText_Book
            android:padding="8dp"
            android:singleLine="true"
            android:id="@+id/activation_code"
            android:layout_marginLeft="20dp"
            style="@style/App_EditTextStyle"
            android:textColor="@color/editext_color"
            android:layout_marginRight="20dp"
            android:background="@drawable/round"
            android:layout_width="match_parent"
            android:layout_height="40dp" />



        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.fazal.capalino.CustomViews.CustomButton
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/submit_btn_name"
                android:onClick="SubmitClick"
                android:background="@drawable/button_round"
                android:layout_width="140dp"
                android:layout_height="45dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

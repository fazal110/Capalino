<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.fazal.capalino.LoginActivity">

    <LinearLayout
    android:orientation="vertical"
    android:id="@+id/logindialog"
    android:layout_alignParentBottom="true"
    android:background="@drawable/round_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.fazal.capalino.CustomViews.CustomTextView
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:background="@drawable/textview_round"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="@string/heading_text"
        android:layout_height="@dimen/activity_login" />

    <com.example.fazal.capalino.CustomViews.CustomTextView_Book
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="17sp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"/>

    <com.example.fazal.capalino.CustomViews.CustomEditText_Book
        android:padding="8dp"
        android:id="@+id/email"
        android:singleLine="true"
        style="@style/App_EditTextStyle"
        android:textColor="@color/editext_color"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <com.example.fazal.capalino.CustomViews.CustomTextView_Book
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"/>

    <com.example.fazal.capalino.CustomViews.CustomEditText_Book
        android:padding="8dp"
        android:id="@+id/password"
        android:singleLine="true"
        style="@style/App_EditTextStyle"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:textColor="@color/editext_color"
        android:layout_marginRight="20dp"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.fazal.capalino.CustomViews.CustomCheckBox
            android:layout_marginLeft="12dp"
            android:button="@drawable/checkbox_style"
            android:text=" Remember me"
            android:id="@+id/remember_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.fazal.capalino.CustomViews.CustomTextView_Book
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/blue"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="@string/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.fazal.capalino.CustomViews.CustomButton
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/login_btn_name"
            android:onClick="LoginClick"
            android:background="@drawable/button_round"
            android:layout_width="140dp"
            android:layout_height="45dp" />

        <com.example.fazal.capalino.CustomViews.CustomButton
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/register_btn_name"
            android:onClick="RegisterClick"
            android:background="@drawable/button_round"
            android:layout_width="140dp"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
